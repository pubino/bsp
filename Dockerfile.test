# Test-specific Dockerfile that installs devDependencies
FROM node:18-bullseye as base

# Install system dependencies for headful browser and VNC
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    procps \
    curl \
    supervisor \
    xvfb \
    x11vnc \
    fluxbox \
    openssl \
    && rm -rf /var/lib/apt/lists/*

# Install additional dependencies that Playwright needs
RUN apt-get update && apt-get install -y \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libatspi2.0-0 \
    libdrm2 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Install noVNC
RUN mkdir -p /opt/noVNC && \
    cd /opt/noVNC && \
    wget -qO- https://github.com/novnc/noVNC/archive/refs/tags/v1.4.0.tar.gz | tar xz --strip-components=1 && \
    ln -s /opt/noVNC/vnc.html /opt/noVNC/index.html

# Generate self-signed certificate for noVNC
RUN openssl req -new -x509 -days 365 -nodes -subj "/C=US/ST=State/L=City/O=Organization/CN=localhost" -out /opt/noVNC/self.pem -keyout /opt/noVNC/self.pem

# Install websockify
RUN mkdir -p /opt/websockify && \
    cd /opt/websockify && \
    wget -qO- https://github.com/novnc/websockify/archive/refs/tags/v0.11.0.tar.gz | tar xz --strip-components=1

# Set up application directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL Node.js dependencies (including devDependencies for testing)
RUN npm ci

# Install Playwright browsers (retry up to 3 times for network resilience)
RUN for i in 1 2 3; do \
        echo "Attempt $i of Playwright browser installation..." && \
        npx playwright install chromium && \
        echo "Playwright browsers installed successfully" && \
        break || \
        echo "Attempt $i failed, retrying in 5 seconds..." && \
        sleep 5; \
    done && \
    if [ $i -eq 3 ]; then \
        echo "Failed to install Playwright browsers after 3 attempts" && \
        exit 1; \
    fi

# Test stage
FROM base as test

# Copy application code
COPY . .

# Make test startup script executable
RUN chmod +x test-startup.sh

# Create necessary directories
RUN mkdir -p /tmp /app/storage

# Set environment variables for testing
ENV DISPLAY=:99
ENV NODE_ENV=test
ENV NOVNC_PORT=8080
ENV VNC_PORT=5900

# Use test startup script
CMD ["./test-startup.sh"]