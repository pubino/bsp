{
  "name": "drupal-ui-automation",
  "version": "1.0.0",
  "description": "Automated Drupal 10 UI testing platform with Playwright and interactive VNC login",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "docker-compose --profile test run --rm test npm run test:all",
    "test:watch": "npx jest --watch",
    "test:unit": "docker-compose --profile test run --rm test npm run test:unit:only",
    "test:unit:only": "npx jest --testPathPattern=unit",
    "test:unit:host": "npx jest --testPathPattern=unit",
    "test:integration": "node tests/run-integration-tests.js",
    "test:integration:direct": "npx jest --testPathPattern=integration",
    "test:all": "npx jest",
    "test:container": "docker-compose --profile test run --rm test",
    "test:integration:container": "docker-compose --profile test run --rm test npm run test:integration:direct",
    "test:only": "npx jest --testPathPattern=integration --forceExit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "automation",
    "docker",
    "drupal",
    "playwright",
    "ui-testing",
    "vnc"
  ],
  "author": "",
  "license": "MIT"
}